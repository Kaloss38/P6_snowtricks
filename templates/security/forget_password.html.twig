{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Snowtricks{% endblock %}

{% block content %}
    <div class="container">
        <div class="col-lg-10 col-md-6 col-sm-12 text-center mt-4 auth-forms" style="margin:auto;">
            <h1>Mot de passe oublié</h1>
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-success">
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
            {{ form(form) }}
        </div>
    </div>  
{% endblock %}
