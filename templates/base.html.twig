<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="La boutique qui vend uniquement du made in France">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v4.1.1">
    <title>{% block title %} SnowTricks - Le meilleur des tricks de snowboard {% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('assets/css/snowtricks.css') }}">

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('home')}}">SnowTricks</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-item-custom ml-auto">
            {% if app.user %}
                <a href="{{ path('trick_add') }}">Tricks</a> | 
                <a href="{{ path('dashboard', { 'id' : app.user.id }) }}">Mon compte</a> | 
                <a href="{{ path('app_logout') }}">Déconnexion</a>
            {% else %}
                <a href="{{ path('app_login') }}">Connexion</a> | <a href="{{ path('register') }}">Inscription</a>
            {% endif %}
            </div>
        </div>
    </nav>
</header>

<main role="main">

    
        {% block content %}
        {% endblock %}

    <!-- FOOTER -->
    <footer class="footer-custom">
        <p>
        &copy; 2021 SnowTricks, Inc. 
        <small>Le meilleur des tricks de Snowboard</small>
        &middot; <a href="#">Mentions légales</a>
        </p>
    </footer>
</main>
{% block javascript %}
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
    <script src="https://kit.fontawesome.com/fc8ea770fb.js" crossorigin="anonymous"></script>   
{% endblock %}

</body>
</html>