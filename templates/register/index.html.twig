{% extends 'base.html.twig' %}

{% block content %}
<div class="container">
    <div class="col-lg-6 col-md-6 col-sm-12 text-center mt-4 auth-forms" style="margin:auto;">
        <h1>Inscription</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-success">
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
        {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>

            {{ form_row(form.email) }}
            {{ form_row(form.pseudo) }}
            {{ form_row(form.password) }}
            
            {% set termsOfUseFormGroup %}
                {{ form_row(form.isConsenting) }}
            {% endset %}
            {{ termsOfUseFormGroup|replace({'#DOCUMENTATION#':'<a class="has-text-underline" href="' ~ path('mentions-legales') ~ '" target="_blank">Mentions légales</a>'})|raw }}
            {# <div class="form-check">        
                <input type="checkbox" id="register_isConsenting" name="register[isConsenting]" required="required" class="form-check-input" value="1">
                <label class="form-check-label required" for="register_isConsenting">J'ai lu(e) et j'accèpte les mentions légales</label>
            </div> #}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}